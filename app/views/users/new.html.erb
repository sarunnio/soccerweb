<%= form_for(@user) do |f|%>
	<%= render 'shared/error_messages' %>
	<%= f.label :name %><br/>
	<%= f.text_field :name %><br/>
	<%= f.label :email %><br/>
	<%= f.text_field :email %><br/>
	<%= f.label :birth_date %><br/>
	<%= f.text_field :birth_date, :size => 10  %><br/>
	<%= f.label :password %><br/>
	<%= f.password_field :password %><br/>
	<%= f.label :password_confirmation, "Confirmation"  %><br/>
	<%= f.password_field :password_confirmation %><br/>
	<%= f.submit "Sign up" %>
<% end %>
<%= javascript_include_tag 'jquery-1.7.1.min.js' %>
<%= javascript_include_tag 'jquery-ui-1.8.17.custom.min.js'  %>
<%= stylesheet_link_tag 'jquery-ui-1.8.17.custom.css' %>
<%= javascript_include_tag 'jquery-ui-1.8.10.offset.datepicker.min.js'  %>


